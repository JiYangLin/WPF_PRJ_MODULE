<Fluent:RibbonWindow x:Class="FluentRibbonPrj.OptWaitWnd"
         xmlns:Fluent="urn:fluent-ribbon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
       Title="" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="1">
            <Label FontSize="20" Name="inf" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Canvas>
        <StackPanel Grid.Row="2" Name="btnSp" Orientation="Horizontal" HorizontalAlignment="Right">
            <Fluent:Button Margin="30 0 0 0 "  Header="确定"  Icon="icon/open.png" LargeIcon="icon/open.png" x:Name="Confirm" Click="Confirm_Click" Width="80"/>
            <Fluent:Button Margin="30 0 0 0 "  Header="取消"  Icon="icon/open.png" LargeIcon="icon/open.png" x:Name="Cancel" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Fluent:RibbonWindow>
